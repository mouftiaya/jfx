<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockSystem.controller.SellController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="15.0" styleClass="card" prefWidth="500">
        <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
        </padding>

        <Label text="Sell Product" style="-fx-text-fill: #2d5016; -fx-font-size: 28px; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <VBox spacing="10.0">
            <Label text="Select product" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <ComboBox fx:id="productCombo" prefWidth="400.0" />
        </VBox>

        <VBox spacing="10.0">
            <Label text="Quantity" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <TextField fx:id="quantityField" prefWidth="400.0" promptText="Enter quantity" />
        </VBox>

        <VBox spacing="10.0">
            <Label text="Description" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <TextArea fx:id="descriptionField" prefWidth="400.0" prefRowCount="3" promptText="Enter description" wrapText="true" />
        </VBox>

        <VBox spacing="10.0">
            <Label text="Note" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            <TextArea fx:id="noteField" prefWidth="400.0" prefRowCount="3" promptText="Enter note" wrapText="true" />
        </VBox>

        <Button fx:id="sellButton" text="Sell Product" onAction="#handleSell" style="-fx-background-color: #0d1b2a; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30 10 30; -fx-font-size: 14px;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
