<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockSystem.controller.ProductController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Product Management">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Product" onAction="#handleAddProduct"/>
        <Button text="Delete Product" onAction="#handleDeleteProduct" style="-fx-background-color: #d9534f;"/>
        <Button text="Stock IN" onAction="#handleStockIn"/>
        <Button text="Stock OUT" onAction="#handleStockOut" style="-fx-background-color: #f0ad4e;"/>
    </HBox>

    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nameCol" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="skuCol" prefWidth="100.0" text="SKU" />
            <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price" />
            <TableColumn fx:id="quantityCol" prefWidth="100.0" text="Qty" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
