<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainLayout" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockSystem.controller.DashboardController" stylesheets="@styles.css">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Menu" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>
            <Button maxWidth="Infinity" text="Products" onAction="#showProducts" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;"/>
            <Button maxWidth="Infinity" text="Categories" onAction="#showCategories" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;"/>
            <Button maxWidth="Infinity" text="Suppliers" onAction="#showSuppliers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;"/>
            <Button maxWidth="Infinity" text="Users" onAction="#showUsers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;"/>
        </VBox>
    </left>
    <center>
        <!-- Content will be loaded dynamically -->
        <VBox fx:id="contentArea" alignment="CENTER">
             <Label text="Welcome to Stock Management System"/>
        </VBox>
    </center>
</BorderPane>
