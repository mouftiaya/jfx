<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockSystem.controller.UserController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="User Management">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add User" onAction="#handleAddUser" style="-fx-background-color: #0d1b2a; -fx-text-fill: white;"/>
        <Button text="Delete User" onAction="#handleDeleteUser" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="usernameCol" prefWidth="150.0" text="Username" />
            <TableColumn fx:id="roleCol" prefWidth="100.0" text="Role" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
