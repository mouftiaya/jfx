<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="stock-management-unit" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entities -->
        <class>com.stockSystem.model.Product</class>
        <class>com.stockSystem.model.Transaction</class>
        <class>com.stockSystem.model.Category</class>
        <class>com.stockSystem.model.Supplier</class>
        <class>com.stockSystem.model.User</class>

        <properties>

            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/stock_db?createDatabaseIfNotExist=true&amp;useSSL=false&amp;serverTimezone=UTC"/>

            <!-- ROOT USER WITH NO PASSWORD -->
            <property name="jakarta.persistence.jdbc.user" value="root"/>

            <!-- â— NO PASSWORD PROPERTY AT ALL -->

            <!-- Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>
